<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="288.0" prefWidth="613.0" spacing="20.0" style="-fx-background-color: blue;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.retosemanal29_kotlin_javafx.controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
         <children>
            <VBox prefHeight="100.0" prefWidth="222.0">
               <children>
                  <Label style="-fx-background-color: red;" text="Inserte los números:" />
                  <TextField fx:id="numbersScreen" prefHeight="112.0" prefWidth="222.0" />
               </children>
            </VBox>
            <Label alignment="CENTER" contentDisplay="CENTER" disable="true" prefHeight="29.0" prefWidth="28.0" style="-fx-font-size: 20; -fx-background-color: green;" text="-&gt;" />
            <VBox prefHeight="100.0" prefWidth="231.0">
               <children>
                  <Label style="-fx-background-color: red;" text="Compruebe los resultados:" />
                  <TextArea fx:id="resultScreen" prefHeight="137.0" prefWidth="252.0" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="45.0" prefWidth="477.0" spacing="120.0">
         <children>
            <Button fx:id="botonAscendente" mnemonicParsing="false" prefHeight="25.0" prefWidth="43.0" text="ASC" />
            <Button fx:id="botonDescendente" mnemonicParsing="false" text="DESC" />
         </children>
      </HBox>
      <Button fx:id="botonCalcularNumerosPerdidos" mnemonicParsing="false" text="Sacar números perdidos" />
      <Button fx:id="botonSacarNumerosPrimos" mnemonicParsing="false" text="Sacar todos los números primos" />
   </children>
</VBox>
